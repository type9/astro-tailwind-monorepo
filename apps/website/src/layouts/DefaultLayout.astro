---
import "../styles/global.css";
import BaseHead from "@monorepo/components/BaseHead.astro";
import Footer from "@monorepo/components/Footer.astro";
const { title, description } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <BaseHead title={title} description={description} />
  </head>
  <body class="h-[100vh] w-[100vw] bg-background-neutral">
    <nav class="h-navbar">
      <a href="#">Home</a>
      <a href="#">Posts</a>
      <a href="#">Contact</a>
    </nav>
    <h1>{title}</h1>
    <article class="mt-navbar">
      <slot />
    </article>
    <Footer />
  </body>
</html>
